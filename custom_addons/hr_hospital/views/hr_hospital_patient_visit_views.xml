<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="hr_hospital_patient_visit_view_tree" model="ir.ui.view">
        <field name="name">hr.hospital.patient_visit.view.tree</field>
        <field name="model">hr.hospital.patient_visit</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name=""/>
            </tree>
        </field>
    </record>

    <record id="hr_hospital_patient_visit_view_form" model="ir.ui.view">
        <field name="name">hr.hospital.patient_visit.form</field>
        <field name="model">hr.hospital.patient_visit</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hr_hospital_patient_visit_act_window" model="ir.actions.act_window">
        <field name="name">Patient_visits</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.hospital.patient_visit</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="hr_hospital_patient_visit_menu"
            parent="hr_hospital_patient_visit_list_menu"
            action="hr_hospital_patient_visit_act_window"
            name="Patient_visits"
            sequence="150"/>

</odoo>
